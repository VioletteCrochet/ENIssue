<%- include("header.ejs") %>

    <section class="text-gray-600 body-font overflow-hidden">
        <div class="container px-5 py-24 mx-auto">
            <div class="flex flex-col">
                <!-- Détails de l'issue -->
                <div class="p-6 bg-white rounded-lg shadow-md">
                    <span class="inline-block py-1 px-2 rounded bg-red-50 text-red-500 text-xs font-medium tracking-widest"><%= issue.status === 'open' ? 'non résolu' : 'résolu' %></span>
                    <h1 class="text-2xl font-bold text-gray-900 mt-4 mb-4"><%= issue.title %></h1>
                    <p class="leading-relaxed text-gray-700 mb-6"><%= issue.description %></p>
                    <div class="flex items-center mb-6">
                        <img alt="author" src="https://dummyimage.com/104x104" class="w-12 h-12 rounded-full flex-shrink-0 object-cover object-center">
                        <div class="ml-4">
                            <span class="font-medium text-gray-900"><%= issue.author %></span>
                            <p class="text-gray-400 text-sm"><%= issue.date %></p>
                        </div>
                    </div>
                </div>

                <!-- Liste des commentaires -->
                <div class="mt-10">
                    <h2 class="text-xl font-semibold mb-4">Commentaires</h2>
                    <% comments.forEach(function(comment) { %>
                    <div class="p-4 bg-gray-50 rounded-lg shadow-md mb-4">
                        <p class="text-gray-700"><%= comment.content %></p>
                        <div class="flex items-center mt-4">
                            <img alt="user" src="https://dummyimage.com/50x50" class="w-10 h-10 rounded-full flex-shrink-0 object-cover object-center">
                            <div class="ml-3">
                                <span class="font-medium text-gray-900"><%= comment.author %></span>
                                <p class="text-gray-400 text-xs"><%= comment.date %></p>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </section>
    <%- include("footer.ejs") %>
